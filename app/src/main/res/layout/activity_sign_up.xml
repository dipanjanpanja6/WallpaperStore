<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.SignUpActivity"
    android:orientation="vertical"
    android:background="@color/item_light_theme">
    <!--ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bgac"
        android:scaleType="centerCrop"/-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/main_illus"
            android:layout_marginBottom="55dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/Signup_name"
            android:hint="Full Name"
            android:textColorHint="@color/black_overlay"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_margin="5dp"
            android:id="@+id/Signup_email"
            android:hint="Email Address"
            android:textColorHint="@color/black_overlay"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/Signup_password"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@color/black_overlay"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/signup_button"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_person_add_black_24dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:background="@drawable/signup_button_style"
            android:layout_marginTop="30dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bottom_circle"

            />
    </LinearLayout>


</FrameLayout>